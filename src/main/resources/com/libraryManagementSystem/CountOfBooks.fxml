<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.libraryManagementSystem.controller.CountOfBooksController"
            prefWidth="700" prefHeight="450" style="-fx-background-color: #f4f4f4;"
            stylesheets="@css/countOfBooks.css">

    <!-- Top bar -->
    <top>
    <BorderPane style="-fx-background-color: #336699; -fx-padding: 10;">
        <!-- Left section -->
        <left>
            <Button text="Back" onAction="#switchTOReports" style="-fx-font-weight: bold; -fx-background-color: #ffffff;"/>
        </left>

        <!-- Center section (Title) -->
        <center>
            <Label text="Count Of Books" textFill="white">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Label>
        </center>

        <!-- Right section -->
        <right>
            <Button text="Home" onAction="#switchTOHome" style="-fx-font-weight: bold; -fx-background-color: #ffffff;"/>
        </right>
    </BorderPane>
</top>


    <!-- Center content -->
    <center>
        <VBox spacing="15" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <Label fx:id="error" text=" " textFill="red" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

            <!-- Scrollable Table -->
            <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="300" >
                 
                 <TableView fx:id="categoryCountTableView" prefHeight="280"
           					style="-fx-background-color: white; -fx-border-color: #cccccc;">
					    <columns>
					        <TableColumn fx:id="categoryColumn" text="Category" prefWidth="300"   />
					        <TableColumn fx:id="bookCount" text="Book Count" prefWidth="300"   />
					    </columns>
				</TableView>
                 
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
