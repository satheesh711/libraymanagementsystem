<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<Pane prefWidth="600.0" prefHeight="400.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryManagementSystem.controller.MemberController"
      stylesheets="@css/members.css"
      styleClass="main-pane">

   <children>
      <!-- Back Button -->
      <Button layoutX="20.0" layoutY="20.0" text="Back"
              onAction="#switchToBack"
              styleClass="nav-button"/>

      <!-- Centered Button Row -->
      <HBox layoutX="70.0" layoutY="180.0" spacing="30" styleClass="button-box">
         <children>
            <Button text="RegisterMember" onAction="#registerMember" styleClass="action-button"/>
            <Button text="UpdateMember" onAction="#SwitchToUpdateMember" styleClass="action-button"/>
            <Button text="GetAllMembers" onAction="#switchToViewAllMembers" styleClass="action-button"/>
         </children>
      </HBox>
   </children>

   <cursor>
      <Cursor fx:constant="HAND"/>
   </cursor>
</Pane>
