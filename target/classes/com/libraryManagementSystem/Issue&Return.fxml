<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.libraryManagementSystem.controller.IssueAndReturnController"
           prefHeight="400.0" prefWidth="600.0"
           stylesheets="@css/issue_return.css">

    <children>
        <VBox alignment="CENTER" spacing="20.0">
            <!-- Title -->
            <Label text="Issue &amp; Return">
                <font>
                    <Font name="System Bold Italic" size="20.0"/>
                </font>
            </Label>

            <!-- Buttons -->
            <Button text="IssueBook" onAction="#switchToIssueBook" prefWidth="160.0" prefHeight="40.0"
                    styleClass="action-button"/>
            <Button text="ReturnBook" onAction="#switchToReturnBook" prefWidth="160.0" prefHeight="40.0"
                    styleClass="action-button"/>
            <Button text="Back" onAction="#switchToPrimary" prefWidth="160.0" prefHeight="40.0"
                    styleClass="nav-button"/>

        </VBox>
    </children>
</StackPane>
