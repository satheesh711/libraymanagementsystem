<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="420.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryManagementSystem.controller.MemberRegisterController"
      stylesheets="@css/member_Registration.css"
      styleClass="main-pane">

   <!-- Title -->
   <children>
      <Label layoutX="180.0" layoutY="10.0" text="Member Registration" styleClass="title-label"/>
   </children>

   <!-- Error Message -->
   <children>
      <Label layoutX="160.0" layoutY="40.0" fx:id="error"
             text=""
             styleClass="error-label"/>
   </children>

   <!-- Labels and Fields -->
   <children>
      <Label layoutX="140.0" layoutY="80.0" text="Name" styleClass="form-label"/>
      <TextField layoutX="250.0" layoutY="76.0" fx:id="name" styleClass="form-field" prefWidth="200"/>

      <Label layoutX="140.0" layoutY="120.0" text="Email" styleClass="form-label"/>
      <TextField layoutX="250.0" layoutY="116.0" fx:id="email" styleClass="form-field" prefWidth="200"/>

      <Label layoutX="140.0" layoutY="160.0" text="Mobile" styleClass="form-label"/>
      <TextField layoutX="250.0" layoutY="156.0" fx:id="mobile" styleClass="form-field" prefWidth="200"/>

      <Label layoutX="140.0" layoutY="200.0" text="Gender" styleClass="form-label"/>
      <ComboBox layoutX="250.0" layoutY="196.0" fx:id="gender" promptText="Select Gender"
                styleClass="form-field" prefWidth="200"/>

      <Label layoutX="140.0" layoutY="240.0" text="Address" styleClass="form-label"/>
      <TextField layoutX="250.0" layoutY="236.0" fx:id="adress" styleClass="form-field" prefWidth="200"/>
   </children>

   <!-- Buttons -->
   <children>
      <Button layoutX="20.0" layoutY="14.0" text="Back" onAction="#switchToMembers" styleClass="nav-button"/>
      <Button layoutX="520.0" layoutY="14.0" text="Home" onAction="#switchToPrimary" styleClass="nav-button"/>
      <Button layoutX="266.0" layoutY="290.0" text="Submit" onAction="#submitDetails" styleClass="submit-button">
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
      </Button>
   </children>
</Pane>
