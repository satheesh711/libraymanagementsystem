<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="460.0" prefWidth="654.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryManagementSystem.controller.MemberUpdateController"
      stylesheets="@css/updatemember.css"
      styleClass="background-pane">

   <children>
      <!-- Navigation Buttons -->
      <Button layoutX="14.0" layoutY="20.0" mnemonicParsing="false" onAction="#switchToMembers" text="Back" styleClass="nav-button"/>
      <Button layoutX="573.0" layoutY="20.0" mnemonicParsing="false" onAction="#switchToPrimary" text="Home" styleClass="nav-button"/>

      <!-- Title -->
      <Label layoutX="210.0" layoutY="25.0" prefHeight="35.0" prefWidth="300.0" text="UPDATE MEMBER" styleClass="title-label">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Error Label -->
      <Label fx:id="error" layoutX="200.0" layoutY="60.0" text="" styleClass="error-label">
         <font>
            <Font name="Times New Roman Bold" size="18.0"/>
         </font>
      </Label>

      <!-- Form Fields -->
      <Label layoutX="168.0" layoutY="100.0" text="Select Member:" styleClass="form-label"/>
      <ComboBox layoutX="281.0" layoutY="96.0" prefWidth="200.0" fx:id="members" promptText="Select Member" styleClass="combo-box"/>

      <Label layoutX="168.0" layoutY="140.0" text="Member ID:" styleClass="form-label"/>
      <Label fx:id="memberId" layoutX="281.0" layoutY="140.0" prefWidth="200.0" styleClass="info-label"/>

      <Label layoutX="168.0" layoutY="180.0" text="Name:" styleClass="form-label"/>
      <TextField layoutX="281.0" layoutY="176.0" fx:id="name" prefWidth="200.0" disable="true" styleClass="text-field"/>

      <Label layoutX="168.0" layoutY="220.0" text="Email:" styleClass="form-label"/>
      <TextField layoutX="281.0" layoutY="216.0" fx:id="email" prefWidth="200.0" disable="true" styleClass="text-field"/>

      <Label layoutX="168.0" layoutY="260.0" text="Mobile:" styleClass="form-label"/>
      <TextField layoutX="281.0" layoutY="256.0" fx:id="mobile" prefWidth="200.0" disable="true" styleClass="text-field"/>

      <Label layoutX="168.0" layoutY="300.0" text="Gender:" styleClass="form-label"/>
      <ComboBox layoutX="281.0" layoutY="296.0" prefWidth="200.0" fx:id="gender" promptText="Select Gender" disable="true" styleClass="combo-box"/>

      <Label layoutX="168.0" layoutY="340.0" text="Address:" styleClass="form-label"/>
      <TextField layoutX="281.0" layoutY="336.0" fx:id="address" prefWidth="200.0" disable="true" styleClass="text-field"/>
      
      

      <!-- Submit Button -->
      <Button layoutX="270.0" layoutY="390.0" text="UPDATE" onAction="#update" styleClass="submit-button">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</Pane>
