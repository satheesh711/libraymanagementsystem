<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.libraryManagementSystem.controller.ReturnController"
           stylesheets="@css/return.css"
           prefWidth="600.0" prefHeight="450.0">

    <children>
        <VBox fx:id="mainVBox" alignment="TOP_CENTER" spacing="20.0">
            
            <!-- Top Navigation Buttons -->
            <HBox alignment="TOP_CENTER" spacing="320.0" VBox.vgrow="NEVER">
                <Button text="Back" onAction="#switchToIssueAndReturn" styleClass="nav-button"/>
                <Button text="Home" onAction="#switchTOPrimary" styleClass="nav-button"/>
            </HBox>

            <!-- Title -->
            <Label text="Return Book" styleClass="title-label"/>

            <!-- Error Label -->
            <Label fx:id="error" text="" styleClass="error-label"/>

            <!-- Form Fields -->
            <VBox alignment="CENTER" spacing="12.0">
                
                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Book ID" styleClass="form-label"/>
                    <TextField fx:id="bookSearchField"  styleClass="text-field"/>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Member ID" styleClass="form-label"/>
                   <TextField fx:id="memberSearchField"  styleClass="text-field"/>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Return Date" styleClass="form-label"/>
                    <DatePicker fx:id="returnDate" prefWidth="220.0" styleClass="form-input"/>
                </HBox>

                <Button text="Return" onAction="#returnBook" styleClass="submit-button" prefWidth="140"/>
            </VBox>
        </VBox>
    </children>
</StackPane>
