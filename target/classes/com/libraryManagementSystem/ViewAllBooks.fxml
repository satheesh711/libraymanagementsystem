<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.Books.ViewAllBooksController">
	

  <TableView fx:id="bookTableView" prefWidth="500">

      <columns>
		  <TableColumn fx:id="idColumn" prefWidth="30" text="Id" />
		  
          <TableColumn fx:id="titleColumn" prefWidth="120" text="Title" />

          <TableColumn fx:id="authorColumn" prefWidth="120" text="Author" />

          <TableColumn fx:id="categoryColumn" prefWidth="80" text="category" />
          
          <TableColumn fx:id="statusColumn" prefWidth="60" text="status" />
          
          <TableColumn fx:id="availabilityColumn" prefWidth="95" text="availability" />
          
          <TableColumn fx:id="actionsColumn" prefWidth="155" text="actions" />
      </columns>

    </TableView>
    
</VBox>
