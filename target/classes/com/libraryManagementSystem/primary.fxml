<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryManagementSystem.controller.MainController"
      stylesheets="@css/library_styles.css">
   
   <children>
      <!-- Title Label -->
      <Label text="Library Management System" styleClass="title-label"/>

      <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="15.0" prefHeight="637.0" prefWidth="800.0" vgap="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToBook" text="Books" />
            <Button mnemonicParsing="false" onAction="#switchToMemberOptions" text="Members" />
            <Button lineSpacing="10.0" mnemonicParsing="false" onAction="#switchTOIssueAndReturn" text="Issue and Return" />
            <Button mnemonicParsing="false" onAction="#switchToReports" text="Reports" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </FlowPane>
   </children>
</VBox>
